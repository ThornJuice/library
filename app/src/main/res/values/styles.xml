<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="FullScreenTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowBackground">@mipmap/bigwelcome</item>
        <item name="android:windowFullscreen">true</item>

    </style>

    <style name="app_tab_menu_item">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:button">@null</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_marginTop">6dp</item>
        <item name="android:background">@drawable/app_tab_menu_bg</item>
        <item name="android:textColor">@drawable/app_tab_menu_text</item>
        <item name="android:textSize">11sp</item>
    </style>

    <style name="shape_text_big">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/dp_45</item>
        <item name="android:layout_marginStart">@dimen/dp_26</item>
        <item name="android:layout_marginEnd">@dimen/dp_26</item>
        <item name="android:gravity">center</item>
        <item name="bl_solid_color">@color/unable_gray</item>
        <item name="android:textColor">@color/library_text_999</item>
        <item name="android:textSize">@dimen/sp_16</item>
        <item name="bl_corners_radius">@dimen/dp_22</item>
    </style>

    <style name="shape_text_submit">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/dp_45</item>
        <item name="android:layout_marginStart">@dimen/dp_26</item>
        <item name="android:layout_marginEnd">@dimen/dp_26</item>
        <item name="android:gravity">center</item>
        <item name="bl_solid_color">@color/mainColor</item>
        <item name="bl_pressed_solid_color">@color/mainColorDark</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/sp_16</item>
        <item name="bl_corners_radius">@dimen/dp_22</item>
    </style>
    <!-- checkBox -->
    <style name="customCheckBox" parent="@android:style/Widget.CompoundButton.CheckBox">
        <item name="android:button">@drawable/selector_checkbox</item>
        <item name="android:paddingLeft">5.0dp</item>
        <item name="android:maxHeight">50dp</item>
    </style>
</resources>