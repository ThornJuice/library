<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/library_shape_white_radius"
    android:minHeight="400dp"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_40">

        <TextView
            style="@style/library_text_title"
            android:layout_width="match_parent"
            android:layout_centerVertical="true"
            android:gravity="center"
            android:text="预订须知"
            android:textSize="@dimen/sp_18" />

        <RelativeLayout
            android:id="@+id/rl_close"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_marginEnd="@dimen/dp_5">

            <ImageView
                android:layout_margin="@dimen/dp_10"
                android:layout_width="@dimen/dp_15"
                android:layout_height="@dimen/dp_15"
                android:src="@mipmap/icon_close" />
        </RelativeLayout>

    </RelativeLayout>

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minHeight="400dp"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/library_white"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_40"
                    android:background="@color/library_white"
                    android:gravity="center_vertical"
                    android:paddingStart="@dimen/dp_15"
                    android:paddingEnd="0dp">

                    <View
                        style="@style/library_line_vertical"
                        android:layout_width="@dimen/dp_4"
                        android:layout_height="@dimen/dp_15"
                        android:layout_marginEnd="7.5dp"
                        android:background="@color/color_FC5B57" />

                    <TextView
                        style="@style/library_text_title"
                        android:layout_width="@dimen/dp_70"
                        android:layout_marginEnd="@dimen/dp_15"
                        android:text="预定规则"
                        android:textSize="@dimen/sp_16"
                        android:textStyle="bold" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/dp_15"
                    android:layout_marginEnd="@dimen/dp_15"
                    android:layout_marginBottom="@dimen/dp_10"
                    android:background="@color/library_white">

                    <TextView
                        style="@style/library_text_title"
                        android:layout_marginEnd="@dimen/dp_10"
                        android:minWidth="@dimen/dp_70"
                        android:text="门票名称" />

                    <TextView
                        android:id="@+id/tv_ticket_name"
                        style="@style/library_text_666"
                        android:text=""
                        android:textSize="@dimen/sp_15" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/dp_15"
                    android:layout_marginEnd="@dimen/dp_15"
                    android:layout_marginBottom="@dimen/dp_10"
                    android:background="@color/library_white">

                    <TextView
                        style="@style/library_text_title"
                        android:layout_marginEnd="@dimen/dp_10"
                        android:minWidth="@dimen/dp_70"
                        android:text="门票种类" />

                    <TextView
                        android:id="@+id/tv_ticket_type"
                        style="@style/library_text_666"
                        android:text=""
                        android:textSize="@dimen/sp_15" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/dp_15"
                    android:layout_marginEnd="@dimen/dp_15"
                    android:layout_marginBottom="@dimen/dp_10"
                    android:background="@color/library_white">

                    <TextView
                        style="@style/library_text_title"
                        android:layout_marginEnd="@dimen/dp_10"
                        android:minWidth="@dimen/dp_70"
                        android:text="生效时间" />

                    <TextView
                        android:id="@+id/tv_effect"
                        style="@style/library_text_666"
                        android:text=""
                        android:textSize="@dimen/sp_15" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/dp_15"
                    android:layout_marginEnd="@dimen/dp_15"
                    android:layout_marginBottom="@dimen/dp_10"
                    android:background="@color/library_white">

                    <TextView
                        style="@style/library_text_title"
                        android:layout_marginEnd="@dimen/dp_10"
                        android:minWidth="@dimen/dp_70"
                        android:text="有效期" />

                    <TextView
                        android:id="@+id/tv_valid"
                        style="@style/library_text_666"
                        android:text=""
                        android:textSize="@dimen/sp_15" />

                </LinearLayout>


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/library_white"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_40"
                    android:background="@color/library_white"
                    android:gravity="center_vertical"
                    android:paddingStart="@dimen/dp_15"
                    android:paddingEnd="0dp">

                    <View
                        style="@style/library_line_vertical"
                        android:layout_width="@dimen/dp_4"
                        android:layout_height="@dimen/dp_15"
                        android:layout_marginEnd="7.5dp"
                        android:background="@color/mainColor" />

                    <TextView
                        style="@style/library_text_title"
                        android:layout_width="@dimen/dp_70"
                        android:layout_marginEnd="@dimen/dp_15"
                        android:text="费用说明"
                        android:textSize="@dimen/sp_16"
                        android:textStyle="bold" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/dp_15"
                    android:layout_marginEnd="@dimen/dp_15"
                    android:layout_marginBottom="@dimen/dp_10"
                    android:background="@color/library_white">

                    <TextView
                        style="@style/library_text_title"
                        android:layout_marginEnd="@dimen/dp_10"
                        android:minWidth="@dimen/dp_70"
                        android:text="费用包含" />

                    <TextView
                        android:id="@+id/tv_cost_contain"
                        style="@style/library_text_666"
                        android:text=""
                        android:textSize="@dimen/sp_15" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/dp_15"
                    android:layout_marginEnd="@dimen/dp_15"
                    android:layout_marginBottom="@dimen/dp_10"
                    android:background="@color/library_white">

                    <TextView
                        style="@style/library_text_title"
                        android:layout_marginEnd="@dimen/dp_10"
                        android:minWidth="@dimen/dp_70"
                        android:text="费用不含" />

                    <TextView
                        android:id="@+id/tv_cost_without"
                        style="@style/library_text_666"
                        android:text=""
                        android:textSize="@dimen/sp_15" />

                </LinearLayout>


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/dp_10"
                android:background="@color/library_white"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_40"
                    android:background="@color/library_white"
                    android:gravity="center_vertical"
                    android:paddingStart="@dimen/dp_15"
                    android:paddingEnd="0dp">

                    <View
                        style="@style/library_line_vertical"
                        android:layout_width="@dimen/dp_4"
                        android:layout_height="@dimen/dp_15"
                        android:layout_marginEnd="7.5dp"
                        android:background="@color/color_FCA957" />

                    <TextView
                        style="@style/library_text_title"
                        android:layout_width="@dimen/dp_70"
                        android:layout_marginEnd="@dimen/dp_15"
                        android:text="使用说明"
                        android:textSize="@dimen/sp_16"
                        android:textStyle="bold" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/dp_15"
                    android:layout_marginEnd="@dimen/dp_15"
                    android:layout_marginBottom="@dimen/dp_10"
                    android:background="@color/library_white">

                    <TextView
                        style="@style/library_text_title"
                        android:layout_marginEnd="@dimen/dp_10"
                        android:minWidth="@dimen/dp_70"
                        android:text="入园方式" />

                    <TextView
                        android:id="@+id/tv_use_entry_sort"
                        style="@style/library_text_666"
                        android:text=""
                        android:textSize="@dimen/sp_15" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/dp_15"
                    android:layout_marginEnd="@dimen/dp_15"
                    android:layout_marginBottom="@dimen/dp_10"
                    android:background="@color/library_white">

                    <TextView
                        style="@style/library_text_title"
                        android:layout_marginEnd="@dimen/dp_10"
                        android:minWidth="@dimen/dp_70"
                        android:text="换票时间" />

                    <TextView
                        android:id="@+id/tv_exchange_time"
                        style="@style/library_text_666"
                        android:text=""
                        android:textSize="@dimen/sp_15" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/dp_15"
                    android:layout_marginEnd="@dimen/dp_15"
                    android:layout_marginBottom="@dimen/dp_10"
                    android:background="@color/library_white">

                    <TextView
                        style="@style/library_text_title"
                        android:layout_marginEnd="@dimen/dp_10"
                        android:minWidth="@dimen/dp_70"
                        android:text="换票地点" />

                    <TextView
                        android:id="@+id/tv_exchange_address"
                        style="@style/library_text_666"
                        android:text=""
                        android:textSize="@dimen/sp_15" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/dp_15"
                    android:layout_marginEnd="@dimen/dp_15"
                    android:layout_marginBottom="@dimen/dp_10"
                    android:background="@color/library_white">

                    <TextView
                        style="@style/library_text_title"
                        android:layout_marginEnd="@dimen/dp_10"
                        android:minWidth="@dimen/dp_70"
                        android:text="入园时间" />

                    <TextView
                        android:id="@+id/tv_entry_time"
                        style="@style/library_text_666"
                        android:text=""
                        android:textSize="@dimen/sp_15" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/dp_15"
                    android:layout_marginEnd="@dimen/dp_15"
                    android:layout_marginBottom="@dimen/dp_10"
                    android:background="@color/library_white">

                    <TextView
                        style="@style/library_text_title"
                        android:layout_marginEnd="@dimen/dp_10"
                        android:minWidth="@dimen/dp_70"
                        android:text="入园地点" />

                    <TextView
                        android:id="@+id/tv_entry_address"
                        style="@style/library_text_666"
                        android:text=""
                        android:textSize="@dimen/sp_15" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/dp_15"
                    android:layout_marginEnd="@dimen/dp_15"
                    android:layout_marginBottom="@dimen/dp_10"
                    android:background="@color/library_white">

                    <TextView
                        style="@style/library_text_title"
                        android:layout_marginEnd="@dimen/dp_10"
                        android:minWidth="@dimen/dp_70"
                        android:text="身份验证" />

                    <TextView
                        android:id="@+id/tv_verification"
                        style="@style/library_text_666"
                        android:text=""
                        android:textSize="@dimen/sp_15" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/dp_15"
                    android:layout_marginEnd="@dimen/dp_15"
                    android:layout_marginBottom="@dimen/dp_10"
                    android:background="@color/library_white">

                    <TextView
                        style="@style/library_text_title"
                        android:layout_marginEnd="@dimen/dp_10"
                        android:minWidth="@dimen/dp_70"
                        android:text="退改说明" />

                    <TextView
                        android:id="@+id/tv_change"
                        style="@style/library_text_666"
                        android:text=""
                        android:textSize="@dimen/sp_15" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/dp_15"
                    android:layout_marginEnd="@dimen/dp_15"
                    android:layout_marginBottom="@dimen/dp_10"
                    android:background="@color/library_white">

                    <TextView
                        style="@style/library_text_title"
                        android:layout_marginEnd="@dimen/dp_10"
                        android:minWidth="@dimen/dp_70"
                        android:text="其他说明" />

                    <TextView
                        android:id="@+id/tv_other"
                        style="@style/library_text_666"
                        android:text=""
                        android:textSize="@dimen/sp_15" />

                </LinearLayout>

            </LinearLayout>
        </LinearLayout>

    </androidx.core.widget.NestedScrollView>

</LinearLayout>
