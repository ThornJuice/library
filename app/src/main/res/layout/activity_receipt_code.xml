<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context="com.a360vrsh.library.activity.EmptyActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:orientation="vertical">


        <TextView
            style="@style/library_text_333"
            android:layout_marginTop="110dp"
            android:text="请扫码付款"
            android:textColor="@color/mainColor"
            android:textSize="@dimen/sp_30" />

        <TextView
            style="@style/library_text_333"
            android:layout_marginTop="@dimen/dp_15"
            android:text="xxx的小店"
            android:textSize="21sp" />

        <com.a360vrsh.library.widget.ShapeLinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_30"
            app:bl_corners_radius="7.5dp"
            app:bl_stroke_color="@color/mainColor"
            app:bl_stroke_width="1.5dp">

            <ImageView
                android:layout_width="175dp"
                android:layout_height="175dp"
                android:src="@mipmap/library_ic_launcher" />
        </com.a360vrsh.library.widget.ShapeLinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_40"
            android:layout_marginTop="@dimen/dp_40"
            android:gravity="center">

            <ImageView
                android:layout_width="33dp"
                android:layout_height="33dp"
                android:src="@mipmap/library_ic_launcher" />

            <TextView
                style="@style/library_text_title"
                android:layout_marginStart="@dimen/dp_10"
                android:text="支付宝" />


            <ImageView
                android:layout_width="33dp"
                android:layout_height="33dp"
                android:layout_marginStart="@dimen/dp_30"
                android:src="@mipmap/library_ic_launcher" />

            <TextView
                style="@style/library_text_title"
                android:layout_marginStart="@dimen/dp_10"
                android:text="微信支付" />
        </LinearLayout>


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="#2EABE1"
        android:gravity="center"
        android:orientation="vertical">

        <ImageView
            android:layout_width="200dp"
            android:layout_height="@dimen/dp_50"
            android:layout_marginTop="@dimen/dp_20"
            android:src="@mipmap/test"
            android:textColor="@color/white" />


        <TextView
            style="@style/library_text_title"
            android:layout_marginTop="@dimen/dp_10"
            android:layout_marginBottom="@dimen/dp_20"
            android:text="服务热线：400-6111-360"
            android:textColor="@color/white"
            android:textStyle="bold" />
    </LinearLayout>
</RelativeLayout>