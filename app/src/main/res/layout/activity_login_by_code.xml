<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/library_white"
    android:orientation="vertical"
    tools:context=".activity.login.LoginByCodeActivity">

    <TextView
        android:id="@+id/tv_go_register"
        style="@style/library_text_main"
        android:layout_height="@dimen/dp_40"
        android:layout_gravity="right"
        android:layout_marginTop="@dimen/dp_20"
        android:layout_marginEnd="@dimen/dp_15"
        android:gravity="center"
        android:text="注册"
        android:textSize="@dimen/sp_15" />

    <ImageView
        android:layout_width="@dimen/dp_90"
        android:layout_height="@dimen/dp_90"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/dp_40"
        android:src="@mipmap/ic_launcher" />

    <TextView
        style="@style/library_text_333"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_40"
        android:gravity="center"
        android:text="@string/app_name"
        android:textSize="@dimen/sp_15" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_40"
        android:background="@color/library_white"
        android:orientation="vertical"
        android:paddingStart="@dimen/dp_15"
        android:paddingEnd="0dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_50"
            android:gravity="center_vertical">

            <ImageView
                android:layout_width="@dimen/dp_15"
                android:layout_height="@dimen/dp_15"
                android:layout_marginEnd="@dimen/dp_15"
                android:src="@mipmap/icon_phone" />

            <EditText
                android:id="@+id/edt_phone"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@null"
                android:hint="请输入手机号码"
                android:inputType="number"
                android:maxLength="11"
                android:textColor="@color/library_text_666"
                android:textColorHint="@color/text_hint"
                android:textSize="@dimen/sp_15" />

            <ImageView
                android:id="@+id/iv_clear_phone"
                android:layout_width="@dimen/dp_15"
                android:layout_height="@dimen/dp_15"
                android:layout_marginEnd="@dimen/dp_15"
                android:src="@mipmap/icon_round_close" />
        </LinearLayout>

        <View style="@style/library_line_horizontal" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/library_white"
        android:orientation="vertical"
        android:paddingStart="@dimen/dp_15"
        android:paddingEnd="0dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_50"
            android:gravity="center_vertical">

            <ImageView
                android:layout_width="@dimen/dp_15"
                android:layout_height="@dimen/dp_15"
                android:layout_marginEnd="@dimen/dp_15"
                android:src="@mipmap/icon_pwd" />

            <EditText
                android:id="@+id/edt_code"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@null"
                android:hint="请输入验证码"
                android:inputType="number"
                android:maxLength="6"
                android:textColor="@color/library_text_666"
                android:textColorHint="@color/text_hint"
                android:textSize="@dimen/sp_15" />

            <TextView
                android:id="@+id/tv_get_code"
                style="@style/library_text_title"
                android:layout_marginEnd="@dimen/dp_15"
                android:text="获取验证码"
                android:textColor="@color/mainColor" />
        </LinearLayout>

        <View style="@style/library_line_horizontal" />
    </LinearLayout>


    <com.a360vrsh.library.widget.ShapeTextView
        android:id="@+id/tv_submit"
        style="@style/shape_text_big"
        android:layout_marginTop="@dimen/dp_45"
        android:enabled="false"
        android:text="登录" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/dp_5"
        android:layout_marginTop="@dimen/dp_15"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingStart="@dimen/dp_15"
        android:paddingEnd="@dimen/dp_15">

        <TextView
            android:id="@+id/tv_go_forget_pwd"
            style="@style/library_text_999"
            android:layout_height="@dimen/dp_40"
            android:text="忘记密码"
            android:textSize="@dimen/sp_15" />


        <TextView
            android:id="@+id/tv_go_login_by_pwd"
            style="@style/library_text_999"
            android:layout_height="@dimen/dp_40"
            android:layout_alignParentEnd="true"
            android:text="密码登录"
            android:textSize="@dimen/sp_15" />


    </RelativeLayout>
</LinearLayout>