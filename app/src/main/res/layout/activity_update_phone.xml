<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/base_gray"
    android:orientation="vertical"
    tools:context=".activity.login.UpdatePhoneActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_10"
        android:background="@color/library_white"
        android:orientation="vertical"
        android:paddingStart="@dimen/dp_15"
        android:paddingEnd="0dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_50"
            android:gravity="center_vertical">

            <TextView
                style="@style/library_text_title"
                android:layout_width="wrap_content"
                android:layout_marginEnd="@dimen/dp_15"
                android:text="当前绑定手机号：" />

            <TextView
                android:id="@+id/tv_phone"
                style="@style/library_text_title" />
        </LinearLayout>

        <View style="@style/library_line_horizontal" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/library_white"
        android:orientation="vertical"
        android:paddingStart="@dimen/dp_15"
        android:paddingEnd="0dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_50"
            android:gravity="center_vertical">

            <TextView
                style="@style/library_text_title"
                android:layout_width="wrap_content"
                android:layout_marginEnd="@dimen/dp_15"
                android:minWidth="@dimen/dp_80"
                android:text="验证码" />

            <EditText
                android:id="@+id/edt_code"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@null"
                android:hint="请输入验证码"
                android:inputType="number"
                android:maxLength="6"
                android:textColor="@color/library_text_666"
                android:textColorHint="@color/text_hint"
                android:textSize="@dimen/sp_15" />

            <TextView
                android:id="@+id/tv_get_code"
                style="@style/library_text_title"
                android:layout_marginEnd="@dimen/dp_15"
                android:text="获取验证码"
                android:textColor="@color/mainColor" />
        </LinearLayout>

        <View style="@style/library_line_horizontal" />
    </LinearLayout>

    <LinearLayout

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/library_white"
        android:orientation="vertical"
        android:paddingStart="@dimen/dp_15"
        android:paddingEnd="0dp">

        <LinearLayout

            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_50"

            android:gravity="center_vertical">

            <TextView
                style="@style/library_text_title"
                android:layout_width="wrap_content"
                android:layout_marginEnd="@dimen/dp_15"
                android:minWidth="@dimen/dp_80"
                android:text="新手机号码" />

            <EditText
                android:id="@+id/edt_new_phone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@null"
                android:hint="请输入新手机号码"
                android:inputType="number"
                android:maxLength="11"
                android:textColor="@color/library_text_666"
                android:textColorHint="@color/text_hint"
                android:textSize="@dimen/sp_15" />
        </LinearLayout>

        <View style="@style/library_line_horizontal" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/library_white"
        android:orientation="vertical"
        android:paddingStart="@dimen/dp_15"
        android:paddingEnd="0dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_50"
            android:gravity="center_vertical">

            <TextView
                style="@style/library_text_title"
                android:layout_width="wrap_content"
                android:layout_marginEnd="@dimen/dp_15"
                android:minWidth="@dimen/dp_80"
                android:text="验证码" />

            <EditText
                android:id="@+id/edt_new_code"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@null"
                android:hint="请输入验证码"
                android:inputType="number"
                android:maxLength="6"
                android:textColor="@color/library_text_666"
                android:textColorHint="@color/text_hint"
                android:textSize="@dimen/sp_15" />

            <TextView
                android:id="@+id/tv_get_new_code"
                style="@style/library_text_title"
                android:layout_marginEnd="@dimen/dp_15"
                android:text="获取验证码"
                android:textColor="@color/mainColor" />
        </LinearLayout>

    </LinearLayout>


    <com.a360vrsh.library.widget.ShapeTextView
        android:id="@+id/tv_submit"
        style="@style/shape_text_big"
        android:layout_marginTop="@dimen/dp_80"
        android:enabled="false"
        android:text="确定" />

    <TextView
        style="@style/library_text_999"
        android:layout_width="match_parent"
        android:layout_marginStart="@dimen/dp_15"
        android:layout_marginTop="@dimen/dp_20"
        android:layout_marginEnd="@dimen/dp_15"
        android:gravity="center"
        android:text="更换成功后，登录手机号将更改为新手机号码" />
</LinearLayout>