<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/rl_root"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.order.TravelOrderDetailActivity">

    <androidx.core.widget.NestedScrollView
        style="@style/library_nested_scrollview"
        android:layout_above="@id/ll_bottom_group">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/base_gray"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_80"
                android:background="@color/mainColor"
                android:gravity="center_vertical"
                android:paddingStart="@dimen/dp_15"
                android:paddingEnd="0dp">

                <ImageView
                    android:id="@+id/iv_status"
                    android:layout_width="@dimen/dp_20"
                    android:layout_height="@dimen/dp_20"
                    android:layout_marginEnd="7.5dp"
                    android:src="@mipmap/ic_order_status" />

                <TextView
                    android:id="@+id/tv_status_title"
                    style="@style/library_text_title"
                    android:layout_width="@dimen/dp_80"
                    android:layout_marginEnd="@dimen/dp_15"
                    android:layout_weight="1"
                    android:text="待核销"
                    android:textColor="@color/white"
                    android:textSize="@dimen/sp_18"
                    android:textStyle="bold" />

                <LinearLayout
                    android:gravity="center_vertical|end"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginEnd="@dimen/dp_15"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">

                        <TextView
                            style="@style/library_text_title"
                            android:layout_width="@dimen/dp_15"
                            android:fontFamily="@string/font_family_medium"
                            android:text="¥"
                            android:textColor="@color/white"
                            android:textSize="@dimen/sp_18" />

                        <TextView
                            android:id="@+id/tv_order_price"
                            style="@style/library_text_title"
                            android:fontFamily="@string/font_family_medium"
                            android:text="0.00"
                            android:textColor="@color/white"
                            android:textSize="@dimen/sp_30" />
                    </LinearLayout>

                    <TextView
                        android:id="@+id/tv_price_info"
                        style="@style/library_text_title"
                        android:layout_marginStart="@dimen/dp_15"
                        android:drawableEnd="@mipmap/icon_white_arrow_right"
                        android:drawablePadding="@dimen/dp_5"
                        android:text="价格明细"
                        android:textColor="@color/white"
                        android:textSize="@dimen/sp_10" />

                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_40"
                android:background="@color/library_white"
                android:gravity="center_vertical"
                android:paddingStart="@dimen/dp_15"
                android:paddingEnd="0dp">

                <View
                    style="@style/library_line_vertical"
                    android:layout_width="@dimen/dp_4"
                    android:layout_height="@dimen/dp_15"
                    android:layout_marginEnd="7.5dp"
                    android:background="#FC5B57" />

                <TextView
                    style="@style/library_text_title"
                    android:layout_width="@dimen/dp_80"
                    android:layout_marginEnd="@dimen/dp_15"
                    android:text="商品信息"
                    android:textSize="@dimen/sp_16"
                    android:textStyle="bold" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:orientation="horizontal"
                android:paddingStart="@dimen/dp_15"
                android:paddingEnd="@dimen/dp_15"
                android:paddingBottom="@dimen/dp_10">


                <com.makeramen.roundedimageview.RoundedImageView
                    android:id="@+id/iv_image"
                    style="@style/image_rounded"
                    android:layout_width="@dimen/dp_90"
                    android:layout_height="@dimen/dp_90"
                    android:src="@drawable/library_image_placeholder" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/tv_title"
                        style="@style/library_text_333"
                        android:ellipsize="end"
                        android:maxLines="2"
                        android:text="xxx"
                        android:textSize="@dimen/dp_16"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/tv_type"
                        style="@style/library_text_666"
                        android:layout_marginTop="@dimen/dp_5"
                        android:fontFamily="@string/font_family_medium"
                        android:text="xxx"
                        android:textSize="@dimen/sp_11" />

                    <TextView
                        android:id="@+id/tv_use_date"
                        style="@style/library_text_666"
                        android:layout_marginTop="@dimen/dp_3"
                        android:fontFamily="@string/font_family_medium"
                        android:text="xxx"
                        android:textSize="@dimen/sp_11" />

                    <TextView
                        android:id="@+id/tv_num"
                        style="@style/library_text_666"
                        android:layout_marginTop="@dimen/dp_3"
                        android:fontFamily="@string/font_family_medium"
                        android:text="xxx"
                        android:textSize="@dimen/sp_11" />

                </LinearLayout>


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_40"
                android:layout_marginTop="@dimen/dp_10"
                android:background="@color/library_white"
                android:gravity="center_vertical"
                android:paddingStart="@dimen/dp_15"
                android:paddingEnd="0dp">

                <View
                    style="@style/library_line_vertical"
                    android:layout_width="@dimen/dp_4"
                    android:layout_height="@dimen/dp_15"
                    android:layout_marginEnd="7.5dp"
                    android:background="@color/mainColor" />

                <TextView
                    style="@style/library_text_title"
                    android:layout_marginEnd="@dimen/dp_5"
                    android:text="出行人信息"
                    android:textSize="@dimen/sp_16"
                    android:textStyle="bold" />


            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_tourist_group"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/dp_15"
                    android:layout_marginEnd="@dimen/dp_15">

                    <TextView
                        android:id="@+id/tv_tourist_name"
                        style="@style/library_text_title"
                        android:layout_height="wrap_content"
                        android:text="xxx" />

                    <TextView
                        android:id="@+id/tv_tourist_phone"
                        style="@style/library_text_title"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/dp_15"
                        android:text="xxxx" />


                </LinearLayout>

                <TextView
                    android:id="@+id/tv_tourist_id"
                    style="@style/library_text_title"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/dp_15"
                    android:layout_marginTop="@dimen/dp_4"
                    android:layout_marginEnd="@dimen/dp_15"
                    android:layout_marginBottom="@dimen/dp_10"
                    android:text="xxx" />
            </LinearLayout>

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rv_tourist"
                style="@style/library_rv_wrap_content" />

            <LinearLayout
                android:id="@+id/ll_expend_more"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:gravity="center"
                android:paddingBottom="@dimen/dp_10"
                android:visibility="gone">

                <TextView
                    style="@style/library_text_666"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="5dp"
                    android:text="展开更多" />

                <ImageView
                    android:layout_width="7.5dp"
                    android:layout_height="4.5dp"
                    android:src="@mipmap/ic_bottom_arrow" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_expend_close"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:gravity="center"
                android:paddingBottom="@dimen/dp_10"
                android:visibility="gone">

                <TextView
                    style="@style/library_text_666"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="5dp"
                    android:text="收起" />

                <ImageView
                    android:layout_width="7.5dp"
                    android:layout_height="4.5dp"
                    android:src="@mipmap/ic_top_arrow" />
            </LinearLayout>
            <LinearLayout
                android:id="@+id/ll_ticket_group"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_10"
                android:background="@color/library_white"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_40"
                    android:background="@color/library_white"
                    android:gravity="center_vertical"
                    android:paddingStart="@dimen/dp_15"
                    android:paddingEnd="0dp">

                    <View
                        style="@style/library_line_vertical"
                        android:layout_width="@dimen/dp_4"
                        android:layout_height="@dimen/dp_15"
                        android:layout_marginEnd="7.5dp"
                        android:background="@color/color_FCA957" />

                    <TextView
                        style="@style/library_text_title"
                        android:layout_marginEnd="@dimen/dp_5"
                        android:text="订单信息"
                        android:textSize="@dimen/sp_16"
                        android:textStyle="bold" />


                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/dp_15"
                    android:layout_marginEnd="@dimen/dp_15"
                    android:layout_marginBottom="@dimen/dp_10"
                    android:background="@color/library_white">

                    <TextView
                        style="@style/library_text_title"
                        android:layout_height="match_parent"
                        android:layout_marginEnd="@dimen/dp_10"
                        android:minWidth="@dimen/dp_80"
                        android:text="订单编号" />

                    <TextView
                        android:id="@+id/tv_order_sn"
                        style="@style/library_text_666"
                        android:text=""
                        android:textSize="@dimen/sp_15" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/dp_15"
                    android:layout_marginEnd="@dimen/dp_15"
                    android:layout_marginBottom="@dimen/dp_10"
                    android:background="@color/library_white">

                    <TextView
                        style="@style/library_text_title"
                        android:layout_marginEnd="@dimen/dp_10"
                        android:minWidth="@dimen/dp_80"
                        android:text="创建时间" />

                    <TextView
                        android:id="@+id/tv_create_date"
                        style="@style/library_text_666"
                        android:text=""
                        android:textSize="@dimen/sp_15" />

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/ll_pay_date"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/dp_15"
                    android:layout_marginEnd="@dimen/dp_15"
                    android:layout_marginBottom="@dimen/dp_10"
                    android:background="@color/library_white">

                    <TextView
                        style="@style/library_text_title"
                        android:layout_marginEnd="@dimen/dp_10"
                        android:minWidth="@dimen/dp_80"
                        android:text="支付时间" />

                    <TextView
                        android:id="@+id/tv_pay_date"
                        style="@style/library_text_666"
                        android:text=""
                        android:textSize="@dimen/sp_15" />

                </LinearLayout>

            </LinearLayout>

        </LinearLayout>
    </androidx.core.widget.NestedScrollView>

    <LinearLayout
        android:layout_width="match_parent"
        android:id="@+id/ll_bottom_group"
        android:layout_height="@dimen/dp_50"
        android:layout_alignParentBottom="true"
        android:background="@color/white"
        android:gravity="center"
        android:paddingStart="@dimen/dp_30"
        android:paddingEnd="@dimen/dp_30"
        android:visibility="gone">

        <com.a360vrsh.library.widget.ShapeTextView
            android:id="@+id/tv_two_btn"
            style="@style/shape_text_solid_blue"
            android:layout_width="0dp"
            android:layout_height="@dimen/dp_35"
            android:layout_marginStart="@dimen/dp_15"
            android:layout_marginEnd="@dimen/dp_15"
            android:layout_weight="1"
            android:text="扫码核销"
            android:textSize="@dimen/sp_16" />

        <com.a360vrsh.library.widget.ShapeTextView
            android:id="@+id/tv_one_btn"
            style="@style/shape_text_solid_blue"
            android:layout_width="0dp"
            android:layout_height="@dimen/dp_35"
            android:layout_marginStart="@dimen/dp_15"
            android:layout_marginEnd="@dimen/dp_15"
            android:layout_weight="1"
            android:text="核销码核销"
            android:textSize="@dimen/sp_16"
            app:bl_solid_color="#F5473E" />
    </LinearLayout>
</RelativeLayout>