<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/library_shape_white_radius"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_title"
            style="@style/library_text_title"
            android:layout_width="match_parent"
            android:layout_marginTop="@dimen/dp_10"
            android:layout_marginBottom="@dimen/dp_10"
            android:gravity="center"
            android:text="添加分类"
            android:textSize="@dimen/sp_16" />

        <TextView
            style="@style/library_text_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/dp_20"
            android:text="分类名称" />

        <EditText
            android:id="@+id/edt_content"
            style="@style/library_edt_base"
            android:layout_height="@dimen/dp_35"
            android:paddingStart="@dimen/dp_10"
            android:paddingEnd="@dimen/dp_10"
            android:layout_marginStart="@dimen/dp_20"
            android:layout_marginTop="@dimen/dp_15"
            android:layout_marginEnd="@dimen/dp_20"
            android:background="@drawable/shape_add_goods_class_edit"
            android:hint="请输入分类名称：例店长推荐"
            android:maxLength="64"
            android:textSize="@dimen/sp_14" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/dp_20"
            android:gravity="center">

            <com.a360vrsh.library.widget.ShapeTextView
                android:id="@+id/tv_cancel"
                style="@style/shape_text_solid_blue"
                android:layout_width="@dimen/dp_90"
                android:layout_height="@dimen/dp_28"
                android:layout_marginEnd="@dimen/dp_30"
                android:text="取消"
                android:textSize="@dimen/sp_12"
                android:visibility="visible" />


            <com.a360vrsh.library.widget.ShapeTextView
                android:id="@+id/tv_confirm"
                style="@style/shape_text_solid_blue"
                android:layout_width="@dimen/dp_90"
                android:layout_height="@dimen/dp_28"
                android:text="确定"
                android:visibility="visible" />
        </LinearLayout>
    </LinearLayout>

</RelativeLayout>
