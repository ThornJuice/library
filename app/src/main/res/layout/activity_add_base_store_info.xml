<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    style="@style/library_nested_scrollview"
    tools:context=".activity.store.AddBaseStoreInfoActivity">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/base_gray"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_10"
            android:background="@color/library_white"
            android:orientation="vertical"
            android:paddingStart="@dimen/dp_15"
            android:paddingEnd="0dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_50"
                android:gravity="center_vertical">

                <TextView
                    style="@style/library_text_title"
                    android:layout_marginEnd="@dimen/dp_15"
                    android:layout_weight="1"
                    android:text="所属行业" />

                <TextView
                    android:id="@+id/tv_choose_store_type"
                    style="@style/library_text_title"
                    android:layout_marginEnd="@dimen/dp_15"
                    android:drawableEnd="@mipmap/icon_black_arrow_right"
                    android:drawablePadding="@dimen/dp_8"
                    android:text="请选择" />
            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_40"
            android:layout_marginTop="@dimen/dp_10"
            android:background="@color/library_white"
            android:gravity="center_vertical"
            android:paddingStart="@dimen/dp_15"
            android:paddingEnd="0dp">

            <View
                style="@style/library_line_vertical"
                android:layout_width="@dimen/dp_4"
                android:layout_height="@dimen/dp_15"
                android:layout_marginEnd="7.5dp"
                android:background="#FC5B57" />

            <TextView
                style="@style/library_text_title"
                android:layout_width="@dimen/dp_70"
                android:layout_marginEnd="@dimen/dp_15"
                android:text="基本信息"
                android:textSize="@dimen/sp_16"
                android:textStyle="bold" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/library_white"
            android:orientation="vertical"
            android:paddingStart="@dimen/dp_15"
            android:paddingEnd="0dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_50"
                android:gravity="center_vertical">

                <TextView
                    style="@style/library_text_title"
                    android:layout_width="@dimen/dp_70"
                    android:layout_marginEnd="@dimen/dp_15"
                    android:text="店铺名称" />

                <EditText
                    android:layout_marginEnd="@dimen/dp_15"
                    android:id="@+id/edt_store_name"
                    style="@style/library_edt_base"
                    android:hint="请输入"
                    android:inputType="text"
                    android:maxLength="64" />
            </LinearLayout>

            <View style="@style/library_line_horizontal" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/library_white"
            android:orientation="vertical"
            android:paddingStart="@dimen/dp_15"
            android:paddingEnd="0dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_50"
                android:gravity="center_vertical">

                <TextView
                    style="@style/library_text_title"
                    android:layout_width="0dp"
                    android:layout_marginEnd="@dimen/dp_15"
                    android:layout_weight="1"
                    android:text="店铺分类" />

                <TextView
                    android:id="@+id/tv_choose_store_class"
                    style="@style/library_text_title"
                    android:layout_marginEnd="@dimen/dp_15"
                    android:drawableEnd="@mipmap/icon_black_arrow_right"
                    android:drawablePadding="@dimen/dp_8"
                    android:text="请选择" />
            </LinearLayout>

            <View style="@style/library_line_horizontal" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/library_white"
            android:orientation="vertical"
            android:paddingStart="@dimen/dp_15"
            android:paddingEnd="0dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_50"
                android:gravity="center_vertical">

                <TextView
                    style="@style/library_text_title"
                    android:layout_width="@dimen/dp_70"
                    android:layout_marginEnd="@dimen/dp_15"
                    android:text="联系方式" />

                <EditText
                    android:id="@+id/edt_contact"
                    style="@style/library_edt_base"
                    android:hint="请输入"
                    android:maxLength="11"
                    android:inputType="number" />
            </LinearLayout>

            <View style="@style/library_line_horizontal" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/library_white"
            android:gravity="center_vertical"
            android:paddingStart="@dimen/dp_15"
            android:paddingTop="@dimen/dp_10"
            android:paddingEnd="0dp"
            android:paddingBottom="@dimen/dp_10">


            <TextView
                style="@style/library_text_title"
                android:layout_width="@dimen/dp_70"
                android:layout_marginEnd="@dimen/dp_15"
                android:text="店铺封面" />

            <ImageView
                android:id="@+id/iv_store_logo"
                android:layout_width="@dimen/dp_80"
                android:layout_height="@dimen/dp_80"
                android:layout_marginEnd="@dimen/dp_15"
                android:scaleType="centerCrop"
                android:src="@mipmap/icon_upload_pic" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_40"
            android:layout_marginTop="@dimen/dp_10"
            android:background="@color/library_white"
            android:gravity="center_vertical"
            android:paddingStart="@dimen/dp_15"
            android:paddingEnd="0dp">

            <View
                style="@style/library_line_vertical"
                android:layout_width="@dimen/dp_4"
                android:layout_height="@dimen/dp_15"
                android:layout_marginEnd="7.5dp"
                android:background="#12B7F5" />

            <TextView
                style="@style/library_text_title"
                android:layout_width="@dimen/dp_70"
                android:layout_marginEnd="@dimen/dp_15"
                android:text="地址信息"
                android:textSize="@dimen/sp_16"
                android:textStyle="bold" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/library_white"
            android:orientation="vertical"
            android:paddingStart="@dimen/dp_15"
            android:paddingEnd="0dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_50"
                android:gravity="center_vertical">

                <TextView
                    style="@style/library_text_title"
                    android:layout_marginEnd="@dimen/dp_15"
                    android:layout_weight="1"
                    android:text="区域" />

                <TextView
                    android:id="@+id/tv_choose_area"
                    style="@style/library_text_title"
                    android:layout_marginEnd="@dimen/dp_15"
                    android:drawableEnd="@mipmap/icon_black_arrow_right"
                    android:drawablePadding="@dimen/dp_8"
                    android:text="请选择" />
            </LinearLayout>

            <View style="@style/library_line_horizontal" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/library_white"
            android:orientation="vertical"
            android:paddingStart="@dimen/dp_15"
            android:paddingEnd="0dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_50"
                android:gravity="center_vertical">

                <TextView
                    style="@style/library_text_title"
                    android:layout_width="@dimen/dp_70"
                    android:layout_marginEnd="@dimen/dp_15"
                    android:text="地图标注" />

                <LinearLayout
                    android:gravity="center_vertical"
                    android:id="@+id/ll_has_mark"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:visibility="gone">

                    <TextView
                        style="@style/library_text_main"
                        android:text="已标注" />

                    <TextView
                        style="@style/library_text_999"
                        android:text="（点击可修改）"
                        android:textColor="#D2D2D2" />
                </LinearLayout>

                <LinearLayout
                    android:gravity="center_vertical"
                    android:id="@+id/ll_has_not_mark"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:visibility="visible">

                    <TextView
                        style="@style/library_text_main"
                        android:text="未标注" />

                    <TextView
                        style="@style/library_text_999"
                        android:text="（点击可标注）"
                        android:textColor="#D2D2D2" />
                </LinearLayout>

            </LinearLayout>

            <View style="@style/library_line_horizontal" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/library_white"
            android:gravity="center_vertical"
            android:minHeight="@dimen/dp_50"
            android:paddingStart="@dimen/dp_15"
            android:paddingEnd="0dp">

            <TextView
                style="@style/library_text_title"
                android:layout_width="@dimen/dp_70"
                android:layout_marginEnd="@dimen/dp_15"
                android:text="详细地址" />

            <EditText
                android:layout_marginEnd="@dimen/dp_15"
                android:id="@+id/edt_address"
                style="@style/library_edt_base"
                android:hint="请输入"
                android:text="" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_40"
            android:layout_marginTop="@dimen/dp_10"
            android:background="@color/library_white"
            android:gravity="center_vertical"
            android:paddingStart="@dimen/dp_15"
            android:paddingEnd="0dp">

            <View
                style="@style/library_line_vertical"
                android:layout_width="@dimen/dp_4"
                android:layout_height="@dimen/dp_15"
                android:layout_marginEnd="7.5dp"
                android:background="#FCA957" />

            <TextView
                style="@style/library_text_title"
                android:layout_width="@dimen/dp_70"
                android:layout_marginEnd="@dimen/dp_5"
                android:text="图文信息"
                android:textSize="@dimen/sp_16"
                android:textStyle="bold" />

            <TextView
                style="@style/library_text_999"
                android:text="app仅支持预览功能" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_70"
            android:background="@color/library_white"
            android:paddingStart="@dimen/dp_15"
            android:paddingEnd="@dimen/dp_15">

            <TextView
                style="@style/library_text_999"
                android:layout_marginEnd="@dimen/dp_5"
                android:text="请前往PC端进行编辑"
                android:textSize="@dimen/sp_16" />
        </LinearLayout>

        <com.a360vrsh.library.widget.ShapeTextView
            android:id="@+id/tv_submit"
            style="@style/shape_text_big"
            android:layout_marginTop="@dimen/dp_80"
            android:layout_marginBottom="@dimen/dp_90"
            android:enabled="false"
            android:text="保存进入店铺设置" />
    </LinearLayout>
</androidx.core.widget.NestedScrollView>