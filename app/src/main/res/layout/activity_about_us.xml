<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/base_gray"
    tools:context="com.a360vrsh.library.activity.EmptyActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <ImageView
            android:layout_width="@dimen/dp_90"
            android:layout_height="@dimen/dp_90"
            android:layout_marginTop="@dimen/dp_80"
            android:src="@mipmap/library_ic_launcher" />

        <TextView
            style="@style/library_text_333"
            android:text="@string/app_name" />

        <TextView
            style="@style/library_text_333"
            android:text="当前版本：1.0.0" />

        <LinearLayout
            android:id="@+id/ll_update"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_40"
            android:layout_marginTop="@dimen/dp_40"
            android:gravity="center_vertical">

            <TextView
                style="@style/library_text_title"
                android:layout_marginStart="@dimen/dp_15"
                android:text="检查更新" />


            <TextView
                style="@style/library_text_title"
                android:layout_marginEnd="@dimen/dp_15"
                android:layout_weight="1"
                android:drawableEnd="@mipmap/icon_black_arrow_right"
                android:drawablePadding="@dimen/dp_8"
                android:gravity="end"
                android:text="" />

        </LinearLayout>

        <View style="@style/library_line_horizontal" />

        <LinearLayout
            android:id="@+id/ll_feed_back"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_40"
            android:layout_marginTop="@dimen/dp_10"
            android:gravity="center_vertical">

            <TextView
                style="@style/library_text_title"
                android:layout_marginStart="@dimen/dp_15"
                android:text="问题反馈" />


            <TextView
                android:id="@+id/tv_choose_goods_class"
                style="@style/library_text_title"
                android:layout_marginEnd="@dimen/dp_15"
                android:layout_weight="1"
                android:drawableEnd="@mipmap/icon_black_arrow_right"
                android:drawablePadding="@dimen/dp_8"
                android:gravity="end"
                android:text="" />

        </LinearLayout>

        <View style="@style/library_line_horizontal" />

        <LinearLayout
            android:id="@+id/ll_contact"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_40"
            android:layout_marginTop="@dimen/dp_10"
            android:gravity="center_vertical">

            <TextView
                style="@style/library_text_title"
                android:layout_marginStart="@dimen/dp_15"
                android:text="联系平台" />


            <TextView
                style="@style/library_text_title"
                android:layout_marginEnd="@dimen/dp_15"
                android:layout_weight="1"
                android:drawableEnd="@mipmap/icon_black_arrow_right"
                android:drawablePadding="@dimen/dp_8"
                android:gravity="end"
                android:text="0000" />

        </LinearLayout>

        <View style="@style/library_line_horizontal" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="@dimen/dp_20"
        android:gravity="center">

        <TextView
            style="@style/library_text_333"
            android:text="请仔细阅读并理解" />

        <TextView
            style="@style/library_text_333"
            android:text="《全景智慧城市商户服务协议》"
            android:textColor="@color/mainColor" />
    </LinearLayout>
</RelativeLayout>