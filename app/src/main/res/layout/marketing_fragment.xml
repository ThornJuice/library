<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/ll_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/base_gray"
    tools:context=".fragment.MarketingFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">


        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_150"
            android:background="@mipmap/test_top" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_40"
            android:layout_marginTop="@dimen/dp_10"
            android:background="@color/library_white"
            android:gravity="center_vertical">

            <ImageView
                android:layout_width="@dimen/dp_15"
                android:layout_height="@dimen/dp_15"
                android:layout_marginStart="@dimen/dp_15"
                android:src="@mipmap/icon_map_location" />

            <com.a360vrsh.library.widget.UPMarqueeView
                android:id="@+id/marqueeView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/dp_10"
                android:layout_marginEnd="@dimen/dp_25" />
        </LinearLayout>


        <com.noober.background.view.BLLinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/dp_15"
            android:layout_marginTop="@dimen/dp_15"
            android:layout_marginEnd="@dimen/dp_15"
            android:orientation="vertical"
            app:bl_corners_radius="7.5dp"
            app:bl_solid_color="@color/library_white">

            <TextView
                style="@style/library_text_666"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_40"
                android:gravity="center"
                android:text="全景红包 逛全景，领红包" />

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_150"
                android:background="@mipmap/test_top" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_50"
                android:layout_marginStart="@dimen/dp_15"
                android:layout_marginEnd="@dimen/dp_15"
                android:gravity="center_vertical">

                <View
                    style="@style/library_line_vertical"
                    android:layout_width="@dimen/dp_4"
                    android:layout_height="@dimen/dp_15"
                    android:layout_marginEnd="7.5dp"
                    android:background="#FC5B57" />

                <TextView
                    style="@style/library_text_title"
                    android:layout_width="0dp"
                    android:layout_marginEnd="@dimen/dp_15"
                    android:layout_weight="1"
                    android:text="操作" />

                <TextView
                    style="@style/library_text_666"
                    android:drawableEnd="@mipmap/icon_black_arrow_right"
                    android:drawablePadding="@dimen/dp_8"
                    android:text="使用说明" />
            </LinearLayout>

            <View style="@style/library_line_horizontal" />


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/dp_15"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/dp_15"
                    android:gravity="center"
                    android:orientation="vertical">

                    <ImageView
                        android:layout_width="@dimen/dp_30"
                        android:layout_height="@dimen/dp_30"
                        android:layout_marginBottom="@dimen/dp_10"
                        android:src="@mipmap/icon_map_location" />

                    <TextView
                        style="@style/library_text_666"
                        android:text="发红包" />

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/ll_my_red_packet"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/dp_15"
                    android:gravity="center"
                    android:orientation="vertical">

                    <ImageView
                        android:layout_width="@dimen/dp_30"
                        android:layout_height="@dimen/dp_30"
                        android:layout_marginBottom="@dimen/dp_10"
                        android:src="@mipmap/icon_map_location" />

                    <TextView
                        style="@style/library_text_666"
                        android:text="我的红包" />

                </LinearLayout>
            </LinearLayout>
        </com.noober.background.view.BLLinearLayout>

        <com.noober.background.view.BLLinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/dp_15"
            android:layout_marginTop="@dimen/dp_15"
            android:layout_marginBottom="@dimen/dp_15"
            android:layout_marginEnd="@dimen/dp_15"
            android:orientation="vertical"
            app:bl_corners_radius="7.5dp"
            app:bl_solid_color="@color/library_white">

            <TextView
                style="@style/library_text_666"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_40"
                android:gravity="center"
                android:text="全景红包 逛全景，领红包" />

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_150"
                android:background="@mipmap/test_top" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_50"
                android:layout_marginStart="@dimen/dp_15"
                android:layout_marginEnd="@dimen/dp_15"
                android:gravity="center_vertical">

                <View
                    style="@style/library_line_vertical"
                    android:layout_width="@dimen/dp_4"
                    android:layout_height="@dimen/dp_15"
                    android:layout_marginEnd="7.5dp"
                    android:background="#FC5B57" />

                <TextView
                    style="@style/library_text_title"
                    android:layout_width="0dp"
                    android:layout_marginEnd="@dimen/dp_15"
                    android:layout_weight="1"
                    android:text="操作" />

                <TextView
                    style="@style/library_text_666"
                    android:drawableEnd="@mipmap/icon_black_arrow_right"
                    android:drawablePadding="@dimen/dp_8"
                    android:text="使用说明" />
            </LinearLayout>

            <View style="@style/library_line_horizontal" />


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/dp_15"
                android:orientation="horizontal">

                <LinearLayout
                    android:id="@+id/ll_info"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/dp_15"
                    android:gravity="center"
                    android:orientation="vertical">

                    <ImageView
                        android:layout_width="@dimen/dp_30"
                        android:layout_height="@dimen/dp_30"
                        android:layout_marginBottom="@dimen/dp_10"
                        android:src="@mipmap/icon_map_location" />

                    <TextView
                        style="@style/library_text_666"
                        android:text="信息提交" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/dp_15"
                    android:gravity="center"
                    android:orientation="vertical">

                    <ImageView
                        android:layout_width="@dimen/dp_30"
                        android:layout_height="@dimen/dp_30"
                        android:layout_marginBottom="@dimen/dp_10"
                        android:src="@mipmap/icon_map_location" />

                    <TextView
                        style="@style/library_text_666"
                        android:text="申请进度" />

                </LinearLayout>
            </LinearLayout>
        </com.noober.background.view.BLLinearLayout>
    </LinearLayout>
</androidx.core.widget.NestedScrollView>
