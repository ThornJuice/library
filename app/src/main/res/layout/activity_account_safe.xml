<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/base_gray"
    android:orientation="vertical"
    tools:context=".activity.user.AccountSafeActivity">

    <LinearLayout
        android:id="@+id/ll_update_pwd"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_50"
        android:layout_marginTop="@dimen/dp_10"
        android:background="@color/white"
        android:gravity="center_vertical">

        <TextView
            style="@style/library_text_title"
            android:layout_marginStart="@dimen/dp_15"
            android:text="修改密码" />


        <TextView
            style="@style/library_text_title"
            android:layout_marginEnd="@dimen/dp_15"
            android:layout_weight="1"
            android:drawableEnd="@mipmap/icon_black_arrow_right"
            android:drawablePadding="@dimen/dp_8"
            android:gravity="end"
            android:text="" />

    </LinearLayout>

    <View style="@style/library_line_horizontal" />

    <LinearLayout
        android:id="@+id/ll_update_phone"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_50"
        android:background="@color/white"
        android:gravity="center_vertical">

        <TextView
            style="@style/library_text_title"
            android:layout_marginStart="@dimen/dp_15"
            android:text="更换登录手机号码" />


        <TextView
            android:id="@+id/tv_choose_goods_class"
            style="@style/library_text_title"
            android:layout_marginEnd="@dimen/dp_15"
            android:layout_weight="1"
            android:drawableEnd="@mipmap/icon_black_arrow_right"
            android:drawablePadding="@dimen/dp_8"
            android:gravity="end"
            android:text="" />

    </LinearLayout>

    <View style="@style/library_line_horizontal" />


</LinearLayout>