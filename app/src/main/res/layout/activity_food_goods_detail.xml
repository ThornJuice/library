<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:id="@+id/rl_root"
    tools:context=".activity.goods.FoodGoodsDetailActivity"
    android:layout_height="match_parent">

    <androidx.core.widget.NestedScrollView
        style="@style/library_nested_scrollview"
        android:layout_marginBottom="@dimen/dp_50">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/base_gray"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_10"
                android:layout_marginBottom="@dimen/dp_10"
                android:background="@color/library_white"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_40"
                    android:background="@color/library_white"
                    android:gravity="center_vertical"
                    android:paddingStart="@dimen/dp_15"
                    android:paddingEnd="0dp">

                    <View
                        style="@style/library_line_vertical"
                        android:layout_width="@dimen/dp_4"
                        android:layout_height="@dimen/dp_15"
                        android:layout_marginEnd="7.5dp"
                        android:background="#FC5B57" />

                    <TextView
                        style="@style/library_text_title"
                        android:layout_width="@dimen/dp_80"
                        android:layout_marginEnd="@dimen/dp_15"
                        android:text="商品信息"
                        android:textSize="@dimen/sp_16"
                        android:textStyle="bold" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/dp_15"
                    android:layout_marginEnd="@dimen/dp_15"
                    android:layout_marginBottom="@dimen/dp_10"
                    android:background="@color/library_white">

                    <TextView
                        style="@style/library_text_title"
                        android:layout_marginEnd="@dimen/dp_10"
                        android:minWidth="@dimen/dp_80"
                        android:text="商品名称" />

                    <TextView
                        android:id="@+id/tv_goods_name"
                        style="@style/library_text_666"
                        android:text=""
                        android:textSize="@dimen/sp_15" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/dp_15"
                    android:layout_marginEnd="@dimen/dp_15"
                    android:layout_marginBottom="@dimen/dp_10"
                    android:background="@color/library_white">

                    <TextView
                        style="@style/library_text_title"
                        android:layout_marginEnd="@dimen/dp_10"
                        android:minWidth="@dimen/dp_80"
                        android:text="商品编码" />

                    <TextView
                        android:id="@+id/tv_goods_code"
                        style="@style/library_text_666"
                        android:text=""
                        android:textSize="@dimen/sp_15" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/dp_15"
                    android:layout_marginEnd="@dimen/dp_15"
                    android:layout_marginBottom="@dimen/dp_10"
                    android:background="@color/library_white">

                    <TextView
                        style="@style/library_text_title"
                        android:layout_marginEnd="@dimen/dp_10"
                        android:minWidth="@dimen/dp_80"
                        android:text="商品分类" />

                    <TextView
                        android:id="@+id/tv_goods_class"
                        style="@style/library_text_666"
                        android:text=""
                        android:textSize="@dimen/sp_15" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/dp_15"
                    android:layout_marginEnd="@dimen/dp_15"
                    android:layout_marginBottom="@dimen/dp_10"
                    android:background="@color/library_white">

                    <TextView
                        style="@style/library_text_title"
                        android:layout_marginEnd="@dimen/dp_10"
                        android:minWidth="@dimen/dp_80"
                        android:text="分享描述" />

                    <TextView
                        android:id="@+id/tv_share_describe"
                        style="@style/library_text_666"
                        android:text=""
                        android:textSize="@dimen/sp_15" />

                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/dp_15"
                    android:layout_marginEnd="@dimen/dp_15"
                    android:layout_marginBottom="@dimen/dp_10"
                    android:background="@color/library_white">

                    <TextView
                        style="@style/library_text_title"
                        android:layout_marginEnd="@dimen/dp_10"
                        android:minWidth="@dimen/dp_80"
                        android:text="销售价" />

                    <TextView
                        android:id="@+id/tv_sale_price"
                        style="@style/library_text_666"
                        android:text=""
                        android:textSize="@dimen/sp_15" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/dp_15"
                    android:layout_marginEnd="@dimen/dp_15"
                    android:layout_marginBottom="@dimen/dp_10"
                    android:background="@color/library_white">

                    <TextView
                        style="@style/library_text_title"
                        android:layout_marginEnd="@dimen/dp_10"
                        android:minWidth="@dimen/dp_80"
                        android:text="市场价" />

                    <TextView
                        android:id="@+id/tv_market_price"
                        style="@style/library_text_666"
                        android:text=""
                        android:textSize="@dimen/sp_15" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/dp_15"
                    android:layout_marginEnd="@dimen/dp_15"
                    android:layout_marginBottom="@dimen/dp_10"
                    android:background="@color/library_white">

                    <TextView
                        style="@style/library_text_title"
                        android:layout_marginEnd="@dimen/dp_10"
                        android:minWidth="@dimen/dp_80"
                        android:text="成本价" />

                    <TextView
                        android:id="@+id/tv_price_cost"
                        style="@style/library_text_666"
                        android:text=""
                        android:textSize="@dimen/sp_15" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/dp_15"
                    android:layout_marginEnd="@dimen/dp_15"
                    android:layout_marginBottom="@dimen/dp_10"
                    android:background="@color/library_white">

                    <TextView
                        style="@style/library_text_title"
                        android:layout_marginEnd="@dimen/dp_10"
                        android:minWidth="@dimen/dp_80"
                        android:text="包装费" />

                    <TextView
                        android:id="@+id/tv_packing_cost"
                        style="@style/library_text_666"
                        android:text=""
                        android:textSize="@dimen/sp_15" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/dp_15"
                    android:layout_marginEnd="@dimen/dp_15"
                    android:layout_marginBottom="@dimen/dp_10"
                    android:background="@color/library_white">

                    <TextView
                        style="@style/library_text_title"
                        android:layout_marginEnd="@dimen/dp_5"
                        android:minWidth="@dimen/dp_80"
                        android:text="商品图片" />

                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/rv_images"
                        style="@style/library_rv_wrap_content" />

                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_spec_group"
                android:visibility="visible"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/library_white"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_40"
                    android:background="@color/library_white"
                    android:gravity="center_vertical"
                    android:paddingStart="@dimen/dp_15"
                    android:paddingEnd="0dp">

                    <View
                        style="@style/library_line_vertical"
                        android:layout_width="@dimen/dp_4"
                        android:layout_height="@dimen/dp_15"
                        android:layout_marginEnd="7.5dp"
                        android:background="@color/mainColor" />

                    <TextView
                        style="@style/library_text_title"
                        android:layout_width="@dimen/dp_80"
                        android:layout_marginEnd="@dimen/dp_5"
                        android:text="规格属性"
                        android:textSize="@dimen/sp_16"
                        android:textStyle="bold" />


                </LinearLayout>

                <TextView
                    android:layout_marginStart="@dimen/dp_15"
                    style="@style/library_text_title"
                    android:layout_height="@dimen/dp_40"
                    android:text="属性"
                    android:textSize="@dimen/sp_16"
                    android:textStyle="bold" />


                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/rv_attribute"
                    style="@style/library_rv_wrap_content"
                    android:layout_marginStart="@dimen/dp_15"
                    android:layout_marginEnd="@dimen/dp_15" />


                <TextView
                    style="@style/library_text_title"
                    android:layout_height="@dimen/dp_40"
                    android:layout_marginStart="@dimen/dp_15"
                    android:text="规格"
                    android:textSize="@dimen/sp_16"
                    android:textStyle="bold" />

                <com.noober.background.view.BLLinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/dp_15"
                    android:layout_marginEnd="@dimen/dp_15"
                    android:gravity="center_vertical"
                    app:bl_solid_color="#F7F7F7"
                    app:bl_stroke_color="#D8D8D8"
                    app:bl_stroke_width="0.5dp">

                    <TextView
                        android:layout_margin="@dimen/dp_8"
                        style="@style/library_text_666"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:text="规格" />

                    <View
                        style="@style/library_line_vertical"
                        android:background="#D8D8D8" />

                    <TextView
                        android:layout_margin="@dimen/dp_8"
                        style="@style/library_text_666"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:text="销售价" />

                    <View
                        style="@style/library_line_vertical"
                        android:background="#D8D8D8" />

                    <TextView
                        android:layout_margin="@dimen/dp_8"
                        style="@style/library_text_666"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:text="市场价" />

                    <View
                        style="@style/library_line_vertical"
                        android:background="#D8D8D8" />

                    <TextView
                        android:layout_margin="@dimen/dp_8"
                        style="@style/library_text_666"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:text="成本价" />
                </com.noober.background.view.BLLinearLayout>

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/rv_spec"
                    style="@style/library_rv_wrap_content"
                    android:layout_marginStart="@dimen/dp_15"
                    android:layout_marginEnd="@dimen/dp_15"
                    android:layout_marginBottom="@dimen/dp_15" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_40"
                android:layout_marginTop="@dimen/dp_10"
                android:background="@color/library_white"
                android:gravity="center_vertical"
                android:paddingStart="@dimen/dp_15"
                android:paddingEnd="0dp">

                <View
                    style="@style/library_line_vertical"
                    android:layout_width="@dimen/dp_4"
                    android:layout_height="@dimen/dp_15"
                    android:layout_marginEnd="7.5dp"
                    android:background="#FCA957" />

                <TextView
                    style="@style/library_text_title"
                    android:layout_width="@dimen/dp_80"
                    android:text="图文信息"
                    android:textSize="@dimen/sp_16"
                    android:textStyle="bold" />

                <TextView
                    style="@style/library_text_999"
                    android:text="app仅支持预览功能" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_80"
                android:background="@color/library_white"
                android:paddingStart="@dimen/dp_15"
                android:paddingEnd="@dimen/dp_15">

                <TextView
                    android:id="@+id/tv_go_detail"
                    style="@style/library_text_999"
                    android:layout_marginEnd="@dimen/dp_5"
                    android:text="点击查看图文介绍"
                    android:textColor="@color/mainColor"
                    android:textSize="@dimen/sp_15" />
            </LinearLayout>


        </LinearLayout>
    </androidx.core.widget.NestedScrollView>

    <include
        android:id="@+id/ll_bottom_group"
        layout="@layout/layout_goods_detail_bottom" />
</RelativeLayout>