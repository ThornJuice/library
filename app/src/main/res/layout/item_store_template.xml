<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/ll_group"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/sp_30"
        android:gravity="center_vertical">

        <TextView
            android:id="@+id/tv_name"
            style="@style/library_text_333"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:fontFamily="sans-serif-medium"
            android:text="模板一（平台默认模板）"
            android:textSize="@dimen/sp_15" />

        <LinearLayout
            android:id="@+id/ll_check"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:paddingStart="@dimen/dp_15"
            android:paddingEnd="0dp">

            <TextView
                style="@style/library_text_999"
                android:layout_marginEnd="@dimen/dp_5"
                android:text="选择"
                android:textSize="@dimen/sp_14" />

            <ImageView
                android:id="@+id/iv_check"
                android:layout_width="@dimen/dp_17"
                android:layout_height="@dimen/dp_17"
                android:src="@mipmap/icon_square_checked" />
        </LinearLayout>

    </LinearLayout>


    <TextView
        android:id="@+id/tv_explain"
        style="@style/library_text_999"
        android:layout_height="@dimen/dp_30"
        android:text="说明：不支持自定义菜单设置"
        android:textSize="@dimen/sp_14" />

    <TextView
        style="@style/library_text_333"
        android:text="示意图"
        android:textSize="@dimen/sp_14" />

    <LinearLayout
        android:layout_height="match_parent"
        android:gravity="center"
        android:layout_width="match_parent"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/iv_image"
            android:layout_width="121dp"
            android:layout_height="215dp" />

        <TextView
            style="@style/library_text_title"
            android:layout_marginTop="@dimen/dp_10"
            android:layout_marginBottom="@dimen/dp_10"
            android:text="点击可查看大图" />
    </LinearLayout>

</LinearLayout>